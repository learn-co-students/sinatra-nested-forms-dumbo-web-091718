<h1>Make your form here</h1>
<form action="/pirates" method="post">
  <h2>Pirate</h2>
  <label for="pirate_name">Pirate's Name</label>
  <input id="pirate_name" name="pirate[name]" type="text">
  <label for="pirate_weight">Pirate's Weight</label>
  <input id="pirate_weight" name="pirate[weight]" type="text">
  <label for="pirate_height">Pirate's Height</label>
  <input id="pirate_height" name="pirate[height]" type="text">
  <h2>Ships</h2>
  <p>
    <label for="ship_name_1">First Ship Name</label>
    <input id="ship_name_1" name="pirate[ships][][name]" type="text">
    <label for="ship_type_1">First Ship Type</label>
    <input id="ship_type_1" name="pirate[ships][][type]" type="text">
    <label for="ship_booty_1">First Ship Booty</label>
    <input id="ship_booty_1" name="pirate[ships][][booty]" type="text">
   </p>
   <p>
    <label for="ship_name_2">Second Ship Name</label>
    <input id="ship_name_2" name="pirate[ships][][name]" type="text">
    <label for="ship_type_2">Second Ship Type</label>
    <input id="ship_type_2" name="pirate[ships][][type]" type="text">
    <label for="ship_booty_2">Second Ship Booty</label>
    <input id="ship_booty_2" name="pirate[ships][][booty]" type="text">
  </p>
  <input type="submit" value="Submit">
</form>
